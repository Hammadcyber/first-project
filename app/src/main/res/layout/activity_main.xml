<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/solutionText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/resultText"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/resultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/buttons_layout"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="50sp" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:background="#F3F2F2"
            android:paddingVertical="16dp"
            android:id="@+id/buttons_layout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36sp"
                    android:textSize="32sp"
                    android:textColor="@color/white"
                    android:layout_margin="12dp"
                    android:id="@+id/cButton"
                    android:backgroundTint="#9500FF"
                    android:text="C" />
                <Button
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    android:textSize="32sp"
                    android:textColor="@color/white"
                    android:layout_margin="12dp"
                    android:id="@+id/openBracketButton"
                    android:backgroundTint="@color/black"
                    android:text="(" />
                <Button
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    android:textSize="32sp"
                    android:textColor="@color/white"
                    android:layout_margin="12dp"
                    android:backgroundTint="@color/black"
                    android:id="@+id/closeBracketButton"
                    android:text=")" />
                <Button
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    android:textSize="32sp"
                    android:textColor="@color/white"
                    android:layout_margin="12dp"
                    android:id="@+id/divideButton"
                    android:backgroundTint="#FF5722"
                    android:text="/" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    android:textSize="32sp"
                    android:textColor="@color/white"
                    android:layout_margin="12dp"
                    android:id="@+id/sevenButton"
                    android:backgroundTint="#FF0219ED"
                    android:text="7" />
                <Button
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    android:textSize="32sp"
                    android:textColor="@color/white"
                    android:layout_margin="12dp"
                    android:id="@+id/eightButton"
                    android:backgroundTint="#FF0219ED"
                    android:text="8" />
                <Button
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    android:textSize="32sp"
                    android:textColor="@color/white"
                    android:layout_margin="12dp"
                    android:id="@+id/nineButton"
                    android:backgroundTint="#FF0219ED"
                    android:text="9" />
                <Button
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    android:textSize="22sp"
                    android:textColor="@color/white"
                    android:layout_margin="12dp"
                    android:id="@+id/intoButton"
                    android:backgroundTint="#FF5722"
                    android:text="*" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    android:textSize="32sp"
                    android:textColor="@color/white"
                    android:layout_margin="12dp"
                    android:id="@+id/fourButton"
                    android:backgroundTint="#FF0219ED"
                    android:text="4" />
                <Button
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    android:textSize="32sp"
                    android:textColor="@color/white"
                    android:layout_margin="12dp"
                    android:id="@+id/fiveButton"
                    android:backgroundTint="#FF0219ED"
                    android:text="5" />
                <Button
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    android:textSize="32sp"
                    android:textColor="@color/white"
                    android:layout_margin="12dp"
                    android:id="@+id/sixButton"
                    android:backgroundTint="#FF0219ED"
                    android:text="6" />
                <Button
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    android:textSize="32sp"
                    android:textColor="@color/white"
                    android:layout_margin="12dp"
                    android:id="@+id/plusButton"
                    android:backgroundTint="#FF5722"
                    android:text="+" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    android:textSize="32sp"
                    android:textColor="@color/white"
                    android:layout_margin="12dp"
                    android:id="@+id/oneButton"
                    android:backgroundTint="#FF0219ED"
                    android:text="1" />
                <Button
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    android:textSize="32sp"
                    android:textColor="@color/white"
                    android:layout_margin="12dp"
                    android:id="@+id/twoButton"
                    android:backgroundTint="#FF0219ED"
                    android:text="2" />
                <Button
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    android:textSize="32sp"
                    android:textColor="@color/white"
                    android:layout_margin="12dp"
                    android:id="@+id/threeButton"
                    android:backgroundTint="#FF0219ED"
                    android:text="3" />
                <Button
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    android:textSize="32sp"
                    android:textColor="@color/white"
                    android:layout_margin="12dp"
                    android:id="@+id/minusButton"
                    android:backgroundTint="#FF5722"
                    android:text="-" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:layout_margin="12dp"
                    android:id="@+id/acButton"
                    android:backgroundTint="#FF9500FF"
                    android:text="AC" />
                <Button
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    android:textSize="32sp"
                    android:textColor="@color/white"
                    android:layout_margin="12dp"
                    android:id="@+id/zeroButton"
                    android:backgroundTint="#FF0219ED"
                    android:text="0"/>
                <Button
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    android:textSize="32sp"
                    android:textColor="@color/white"
                    android:layout_margin="12dp"
                    android:id="@+id/dotButton"
                    android:backgroundTint="#FF0219ED"
                    android:text="." />
                <Button
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    android:textSize="32dp"
                    android:textColor="@color/white"
                    android:layout_margin="12dp"
                    android:id="@+id/equalButton"
                    android:backgroundTint="#FF5722"
                    android:text="=" />

            </LinearLayout>


        </LinearLayout>



    </RelativeLayout>
